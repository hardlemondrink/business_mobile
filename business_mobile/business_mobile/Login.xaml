<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="business_mobile.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry Placeholder="Номер телефона" x:Name="EntryPhone" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300"/>
            <Entry Placeholder="Проверочный код" x:Name="EntryCode" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300"/>
            <Button Text="Войти" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>