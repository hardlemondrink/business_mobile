<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="business_mobile.TasksView.NewTask">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Название задачи" x:Name="TaskName" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Entry Placeholder="Описание задачи" x:Name="TaskDescription" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300"/>
            <Button Text="Добавить" x:Name="TaskAdd" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300" Clicked="TaskAdd_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>