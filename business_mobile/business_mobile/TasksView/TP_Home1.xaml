<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="business_mobile.TP_Home1">
    
        <ContentPage.Content>
        <AbsoluteLayout>
            <Label x:Name="selected" HorizontalOptions="Center" FontSize="Large"/>
            <ListView x:Name="taskList" ItemTapped="taskList_ItemTapped""/>
            <Button Text="+" AbsoluteLayout.LayoutBounds="0.1, 0.9, 20, 20"
                AbsoluteLayout.LayoutFlags ="PositionProportional"
                HeightRequest="50"
                WidthRequest="50"
                CornerRadius="25"
                Clicked="Button_Clicked"
                ImageSource="icon/Plus_AddTask.png"/>
        </AbsoluteLayout>
    </ContentPage.Content>
   
</ContentPage>